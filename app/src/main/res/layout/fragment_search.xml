<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/btn_gps"
        android:layout_width="50dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="19dp"
        android:background="@color/colorSecondary"
        android:onClick="searchFragGps"
        android:tint="@color/colorPrimaryDark"
        app:srcCompat="@android:drawable/ic_menu_mylocation" />

    <EditText
        android:id="@+id/searchInputBar"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="73dp"
        android:ems="10"
        android:hint="Enter global, state, country"
        android:inputType="textPersonName"
        android:textAlignment="center"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/cardSearchViewPager"
        android:layout_width="411dp"
        android:layout_height="429dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-3dp"
        android:layout_marginBottom="2dp"
        android:clipToPadding="false"
        android:foregroundGravity="center"
        android:overScrollMode="never"
        android:paddingStart="5dp"
        android:paddingLeft="30dp"
        android:paddingEnd="5dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp" />

    <Button
        android:id="@+id/btn_go"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="62dp"
        android:background="#B70BB823"
        android:bottomLeftRadius="10dp"
        android:bottomRightRadius="10dp"
        android:onClick="btnGetCard"
        android:text="GO"
        android:textColor="#FFFFFF"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabDotsSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="6dp"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp" />
</RelativeLayout>